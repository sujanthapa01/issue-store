echo "â³ Running Prettier and lint-staged..."

# Run Prettier on all staged files first
echo "ğŸ¨ Formatting staged files with Prettier..."
yarn prettier --write --ignore-unknown $(git diff --cached --name-only --diff-filter=ACM)

# Run lint-staged for additional checks
echo "ğŸ” Running lint-staged..."
yarn lint-staged

if [ $? -eq 0 ]; then
  echo "âœ… Pre-commit checks completed successfully."
else
  echo "âŒ Pre-commit checks failed. Please fix the issues before committing."
  exit 1
fi